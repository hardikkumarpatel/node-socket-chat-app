{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "server/build",
    "baseUrl": ".",
    "allowJs": true
  },
  "include": ["/src/**/*"],
  "exclude": [
    "/node_modules",
    ".npm"
  ],
}
